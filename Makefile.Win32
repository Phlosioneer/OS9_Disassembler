LFLAGS = /ZI
DISRELS = dis68.obj dismain.obj def68def.obj opcode00.obj commonsubs.obj lblfuncs.c opcodes020.obj\
                cmdfile.obj dprint.obj rof.obj
XTRAS = disglobs.h Makefile.Win32
CFLAGS = /ZI /D__STDC__
EXE = OskDis.exe

$(EXE): $(DISRELS)
	$(CC) $(LFLAGS) $(DISRELS) /Fe$(EXE)

$(DISRELS): $(XTRAS)
	$(CC) /c $(CFLAGS) $*.c

